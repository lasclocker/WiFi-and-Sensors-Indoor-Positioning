<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- this xml corresponds to com.example.activity.StepActivity -->
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=" StepThreshold : " />
	   <EditText
	        android:id="@+id/editText_accThreshold"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="" >
	        <requestFocus />
	    </EditText>
	    
	   <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="   Co_K_wein : " />

	    <EditText
	        android:id="@+id/editText_co_k_wein"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	    
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=" StepObtainDelaySec : " />
	   <EditText
	        android:id="@+id/editText_stepObtainDelaySec"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="" >
	        <requestFocus />
	    </EditText>
	</LinearLayout>

</LinearLayout>
